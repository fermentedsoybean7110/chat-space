.main__contents__text{data: {message: {id: message.id}}}
  .main__contents__text__subjects
    .main__contents__text__subjects__title
      = message.user.name
    .main__contents__text__subjects__date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__contents__text__sentence
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?