.side
  .side__top
    .side__top__user
      = current_user.name
      .side__top__user__icon
        = link_to new_group_path, class: "side__top__user__icon__edit" do
          = icon('fas', 'edit')
        = link_to edit_user_path(current_user), class: "side__top__user__icon__cog" do
          = icon('fas', 'cog')

  .side__contents
    - current_user.groups.each do |group|
      .side__contents__group
        = link_to group_messages_path(group) do
          .side__contents__group__name
            = group.name
          .side__contents__group__text
            = group.show_last_message
